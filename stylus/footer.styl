.Footer
	padding 0 2rem
	background-color black-clear
	&-top
		display: flex 
		justify-content: space-between
		flex-wrap: wrap
		aside
			flex-grow 1
			margin auto
			
	&-social 
		li 
			display: inline-block
			margin-right .5rem
			margin-top auto
	

	&-menu
		padding-top 1rem
		li
			padding .5rem 0
		li:not(:nth-last-child(-n+1)) 
			border-bottom 1px solid black
			
		li:nth-child(n+2)
			border-top 1px solid #282828
		a
			color grey-clear
			display: block
		a:hover
			color #9c4e4e			
	&-list
		text-align: right
	
	
	input
		background-color transparent
		border 1px solid #9c4e4e
		height: 25px
		display: inline-block
		text-align: center

	input[type=submit]
		color #8c8c8c
		margin-top .2rem
		font-size: .9rem
		height: 25px
		
		

	input::-webkit-input-placeholder
		color #7c7c7c !important
		font-size: .9rem
		margin-left .5rem
	small
		color grey-clear
		
	
@media (max-width: 880px)

	.Footer
		&-top
			flex-direction: column
			text-align: center

			aside
				width 100%
		&-social
			padding-top 2rem
		&-subscribe
			padding-top 2rem
		&-menu
			padding-top 2rem

			









		