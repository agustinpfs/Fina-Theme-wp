
	
.Single
	&-hr
		width 35%
		float left
		margin-top 9rem
		
		// display: none
	// position relative
	// overflow hidden
	margin-bottom 4rem
	max-width: 100hv
	&-post 
		margin 0 auto
		transition: .5s

	&-article
		color grey
		// width 100%
		margin 0 auto
		padding-right 20px
		// transition: .5s

	&-title
		font-size: 4em
		color #9c4e4e
		text-align: right
		padding-top 7rem
		padding-bottom 3rem
	// &-logo
	// 	color grey
	// 	position: absolute
	// 	top 3rem
	// 	left 2rem
	// 	font-size: 1em
		
	&-content
		width 70%
		margin: 0 auto
		transition: .5s

	&-data
		display flex 
		justify-content: space-between
		border-bottom 1px solid salmon
		margin-top 2rem
		margin-bottom 4rem
		padding-bottom 5px
		color salmon
		&--footer
			justify-content: flex-start
	
			a 
				font-size: .8rem
				margin-left .2rem
				font-style: italic
				color grey
			li
				display: inline-block
				vertical-align: middle
				margin 0 5px
		
	&-comments
		input
		textarea 
			background-color alpha(grey, 0.3)
			border 0
			max-width: 90%
		a
			color salmon
	figure 
		text-align: center
	img
		max-height: 700px
		width auto
		overflow hidden



@media (max-width: 880px)
	.Single
		&-hr
			display: block
			width 50%
			float left
		transition: .5s
		&-title
			font-size: 3em
			padding-top 7rem
